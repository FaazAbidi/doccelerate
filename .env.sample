# =============================================================================
# DOCCELERATE ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and update the values for your environment
# Both API and Web applications will use these shared environment variables

# -----------------------------------------------------------------------------
# APPLICATION CONFIGURATION
# -----------------------------------------------------------------------------
APP_NAME=Doccelerate API
APP_VERSION=1.0.0
DEBUG=false

# -----------------------------------------------------------------------------
# DATABASE CONFIGURATION
# -----------------------------------------------------------------------------
DATABASE_URL=sqlite:///./doccelerate.db

# -----------------------------------------------------------------------------
# API CONFIGURATION
# -----------------------------------------------------------------------------
API_PREFIX=/api/v1
ALLOWED_ORIGINS=["http://localhost:3000", "https://yourdomain.com"]

# -----------------------------------------------------------------------------
# SECURITY
# -----------------------------------------------------------------------------
SECRET_KEY=your-very-secret-key-change-in-production

# -----------------------------------------------------------------------------
# WEB APPLICATION CONFIGURATION
# -----------------------------------------------------------------------------
# These will be used by the Next.js web application
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_APP_NAME=Doccelerate
